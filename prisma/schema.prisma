generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Usuario {
  id          String   @id @default(uuid())
  nome        String
  email       String   @unique
  dtCriacao   DateTime @default(now())
  dtAlteracao DateTime @updatedAt
  Pedidos     Pedido[]
}

model Produto {
  id          String       @id @default(uuid())
  nome        String
  valor       Float
  quantidade  Int
  DtCriacao   DateTime     @default(now())
  DtAlteracao DateTime     @updatedAt
  Itens       ItemPedido[]
  Loja        Loja?        @relation(fields: [lojaId], references: [id])
  lojaId      String?
}

model Loja {
  id          String    @id @default(uuid())
  name        String
  Produtos    Produto[]
  DtCriacao   DateTime  @default(now())
  DtAlteracao DateTime  @updatedAt
}

model Pedido {
  id          String       @id @default(uuid())
  Total       Float
  ItensPedido ItemPedido[]
  DtCriacao   DateTime     @default(now())
  DtAlteracao DateTime     @updatedAt
  Usuario     Usuario?     @relation(fields: [usuarioId], references: [id])
  usuarioId   String?
}

model ItemPedido {
  id          String   @id @default(uuid())
  Quantidade  Int
  Pedido      Pedido   @relation(fields: [idPedido], references: [id])
  idPedido    String
  Produto     Produto  @relation(fields: [idProduto], references: [id], onDelete: Cascade)
  idProduto   String
  DtCriacao   DateTime @default(now())
  DtAlteracao DateTime @updatedAt
}
